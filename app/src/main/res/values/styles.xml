<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ButtonLight">
        <item name="android:background">@drawable/rounded_button_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ButtonDark">
        <item name="android:background">@drawable/rounded_button_dark</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ButtonRectangle">
        <item name="android:background">@drawable/rectangle_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
